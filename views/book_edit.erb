<h3>Update <%= @book.title() %></h3>

<form action="/books/<%= @book.id() %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="title">Title:</label>
  <input type="text" name="title" placeholder="<%= @book.title() %>">

  <label for="author_last">Author's Last Name:</label>
  <input type="text" name="author_last" placeholder="<%= @book.author_last() %>">

  <label for="author_first">Author's First Name:</label>
  <input type="text" name="author_first" placeholder="<%= @book.author_first() %>">

  <label for="genre">Genre:</label>
  <input type="text" name="genre" placeholder="<%= @book.genre() %>">

  <button type="submit" name="button">Update book</button>
</form>
